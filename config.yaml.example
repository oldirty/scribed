# Core audio settings (simplified structure)
audio:
  source: microphone  # microphone or file
  
  # Microphone settings (flattened)
  device_index: null  # null for default device
  sample_rate: 16000
  channels: 1
  
  # File watcher settings (flattened)
  watch_directory: ./audio_input
  output_directory: ./transcripts
  supported_formats: [".wav", ".mp3", ".flac"]

# Transcription engine settings (simplified - removed SpeechLM2)
transcription:
  provider: whisper  # whisper (local) or openai (API)
  model: base        # whisper: base/small/medium/large, openai: whisper-1
  language: en       # Language code (en, es, fr, etc.)
  api_key: null      # Required for OpenAI (can use OPENAI_API_KEY env var)

# Output settings
output:
  format: txt              # txt or json
  save_to_file: true       # Save transcriptions to files
  copy_to_clipboard: false # Copy to clipboard
  log_file_path: ./logs/transcription.log

# API server settings
api:
  host: "127.0.0.1"
  port: 8080
  debug: false

# Wake word detection (truly optional with feature flag)
wake_word:
  enabled: false           # Must be explicitly enabled
  engine: picovoice        # picovoice (recommended) or whisper
  keywords: ["porcupine"]  # Built-in Picovoice keywords
  access_key: null         # Get free key from https://console.picovoice.ai/
                          # or set PICOVOICE_ACCESS_KEY environment variable

# Voice commands (simplified - basic command mapping only)
# Could we use something like https://github.com/ExtensityAI/symbolicai to make "power words" more useful?
power_words:
  enabled: false           # SECURITY WARNING: Executes system commands!
  max_command_length: 100  # Maximum command length for security
  mappings:
    # Example safe mappings (uncomment and modify as needed):
    # "open notepad": "notepad.exe"
    # "open calculator": "calc.exe"
    # "open browser": "start chrome"
    # "show desktop": "explorer shell:desktop"
    # 
    # SECURITY NOTES:
    # - Only simple, safe commands are recommended
    # - Dangerous commands (rm, del, format, shutdown) are blocked
    # - Commands are executed from your home directory
    # - Use with extreme caution in production environments
